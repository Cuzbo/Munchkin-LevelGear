<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation = "vertical"
    android:background="#39796b">
        <TextView
            android:id="@+id/strenght"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="0"
            android:layout_gravity="center"
            android:textSize="70sp"
            android:textColor="#fff"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginLeft="30dp">
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dwarf"
                    android:textSize="30dp"
                    android:layout_marginBottom="5dp"
                    android:textColor="#fff" />
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Elf"
                    android:textSize="30dp"
                    android:layout_marginBottom="5dp"
                    android:textColor="#fff"/>
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Halfling"
                    android:textSize="30dp"
                    android:layout_marginBottom="5dp"
                    android:textColor="#fff"/>
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Human"
                    android:textSize="30dp"
                    android:layout_marginBottom="15dp"
                    android:textColor="#fff"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thief"
                    android:textSize="30dp"
                    android:layout_marginBottom="5dp"
                    android:textColor="#fff"/>
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cleric"
                    android:textSize="30dp"
                    android:layout_marginBottom="5dp"
                    android:textColor="#fff"
                    />
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Wizard"
                    android:textSize="30dp"
                    android:layout_marginBottom="5dp"
                    android:textColor="#fff"/>
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Warrior"
                    android:textSize="30dp"
                    android:layout_marginBottom="15dp"
                    android:textColor="#fff"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Level"
                    android:layout_gravity="center"
                    android:textSize="40sp"
                    android:textColor="#fff"/>
                <Button
                    android:id="@+id/levelPlus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="+"
                    android:textSize="30dp"
                    />
                <TextView
                    android:id="@+id/levelNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:layout_gravity="center"
                    android:textSize="40sp"
                    android:textColor="#fff"/>
                <Button
                    android:id="@+id/levelMinus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="-"
                    android:textSize="30dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gear"
                    android:layout_gravity="center"
                    android:textSize="40sp"
                    android:textColor="#fff"/>
                <Button
                    android:id="@+id/gearPlus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="+"
                    android:textSize="30dp"/>
                <TextView
                    android:id="@+id/gearNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:layout_gravity="center"
                    android:textSize="40sp"
                    android:textColor="#fff"/>
                <Button
                    android:id="@+id/gearMinus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="-"
                    android:textSize="30dp"/>
            </LinearLayout>

        </LinearLayout>
</LinearLayout>
